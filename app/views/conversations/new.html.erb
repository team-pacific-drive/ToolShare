<div class="conversation-container">
  <div class="form-container">
    <p class="login-title">New Conversation</p>
    <hr class="conversation-hr"></hr>
    <%= form_tag conversations_path, method: :post do %>
      <div>
        <%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :name), class: "dropdown"%>
      </div>

      <div>
        <p class="chat-input-text">Subject</p>
        <br></br>
        <%= text_field_tag :subject, nil, class: "input" %>
      </div>

      <div>
        <p class="chat-input-text">Description</p>
        <br></br>
        <%= text_area_tag :body, nil, class: "input-description" %>
      </div>

      <div>
        <%= submit_tag :Send, class: "login-button" %>
      </div>
    <% end %>
  </div>
</div>
