<p id="notice"><%= notice %></p>

<h1>Tools</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Model</th>
      <th>Price</th>
      <th>Serialnumber</th>
      <th>Photo</th>
      <th>Zipcode</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td><%= tool.title %></td>
        <td><%= tool.description %></td>
        <td><%= tool.model %></td>
        <td><%= tool.price %></td>
        <td><%= tool.serialnumber %></td>
        <td><%= tool.photo %></td>
        <td><%= tool.zipcode %></td>
        <td><%= tool.user_id %></td>
        <td><%= link_to 'Show', tool %></td>
        <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
        <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tool', new_tool_path %>
